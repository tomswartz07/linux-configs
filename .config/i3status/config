# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# √ü
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#95e454"
        color_degraded = "#cae982"
        color_bad = "#e5786d"
        color_separator = "#88b8f6"
        interval = 5
}

#order += "ipv6"
order += "disk /"
order += "disk /home"
order += "disk /mnt/Teradrive"
order += "run_watch SSH"
#order += "run_watch DHCP"
order += "path_exists VPN"
#order += "wireless wlan0"
order += "ethernet enp9s0"
order += "cpu_temperature 0"
order += "battery 1"
order += "load"
order += "volume master"
order += "tztime local"
order += "tztime utc"

cpu_temperature 0 {
        format = "‚ùÑ %degrees¬∞C"
        max_threshold = 65 # 149¬∞F
        path = "/sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon0/temp1_input"
}

wireless wlp2s0 {
        format_up = "‚éá (%quality @ %essid) %ip"
        format_down = "‚éá down"
}

ethernet enp9s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "‚éá %ip"
        format_down = "‚éá down"
}

battery 1 {
        format = "%status %percentage %remaining"
}

run_watch SSH {
        pidfile = "/var/run/ssh*.pid"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun0"
        format = "%title: üîê"
        format_down = ""
}

tztime local {
        format = "%a %d %b %Y %H.%M"
}

tztime utc {
        format = "%H.%M UTC"
        timezone = "Etc/UTC"
}

load {
        format = "Load: %1min %15min"
}

disk "/" {
        format = "Root: %free"
        low_threshold = 30
        threshold_type = percentage_free
}

disk "/home" {
        format = "Home: %free"
        low_threshold = 30
        threshold_type = percentage_free
}

disk "/mnt/Teradrive" {
        format = "Storage: %free"
        low_threshold = 30
        threshold_type = percentage_free
}

volume master {
        format = "‚ô™ %volume"
        device = "pulse:alsa_output.pci-0000_00_14.2.analog-surround-40"
#       mixer = "master"
#       mixer_idx = 0
}
